{
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es2020"],
    "outDir": "../dist/server",
    "allowJs": false,
    "esModuleInterop": true,
    "sourceRoot": "../../server/src",
    "sourceMap": true,
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
