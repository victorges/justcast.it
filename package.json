{
  "name": "helloworld",
  "description": "Simple hello world sample in Node",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server/index.js",
  "scripts": {
    "start": "ts-node src/server/index.ts",
    "start:prod": "node dist/server/index.js",
    "start:docker": "docker run -it --rm -p 8080:8080 --name justcast-it justcast-it",
    "lint": "eslint '**/*.js'",
    "fix": "eslint --fix '**/*.js'",
    "publish": "gcloud builds submit --tag gcr.io/justcast-it/justcast-it",
    "deploy": "gcloud run deploy justcast-it --image=gcr.io/justcast-it/justcast-it:latest --platform=managed --region=us-east4",
    "clean": "rm -r dist",
    "build": "run-p build:client build:server",
    "build:docker": "docker build --progress=plain -t justcast-it .",
    "watch": "run-p watch:client watch:server",
    "build:client": "run-p build:client:copy build:client:bundle",
    "watch:client": "run-p watch:client:copy watch:client:bundle",
    "build:client:copy": "mkdir -p dist && rsync --exclude '*.ts' src/client/* dist/public",
    "watch:client:copy": "nodemon --watch src/client --ext html,css --exec 'run-s build:client:copy'",
    "build:client:bundle": "esbuild --define:process.env.NODE_ENV=\"production\" --minify --bundle --log-level=error src/client/index.ts --outfile=dist/public/bundle.js",
    "watch:client:bundle": "esbuild --define:process.env.NODE_ENV=\"development\" --watch --sourcemap --bundle --log-level=error src/client/index.ts --outfile=dist/public/bundle.js",
    "build:server": "tsc",
    "watch:server": "nodemon --watch src/server --ext ts --exec 'run-s start'"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "author": "Neolag Fresh Ventures",
  "license": "Apache-2.0",
  "dependencies": {
    "@google-cloud/firestore": "^4.12.0",
    "axios": "^0.21.1",
    "cookie": "^0.4.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "is-ip": "^3.1.0",
    "unique-names-generator": "^4.5.0",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@types/cookie": "^0.4.0",
    "@types/express": "^4.17.12",
    "@types/ws": "^7.4.4",
    "esbuild": "0.12.3",
    "google-auth-library": "^7.0.0",
    "got": "^11.0.0",
    "mocha": "^8.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.0.0",
    "typescript": "^4.3.2"
  }
}
